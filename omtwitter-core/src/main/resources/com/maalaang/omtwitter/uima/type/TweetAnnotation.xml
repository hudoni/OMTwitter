<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>TweetAnnotation</name>
  <description>A tweet annotation</description>
  <version>1.0</version>
  <vendor>maalaang.com</vendor>
  <types>
    <typeDescription>
      <name>com.maalaang.omtwitter.uima.type.TweetAnnotation</name>
      <description>Single tweet annotation</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>author</name>
          <description>Screen name of the user who posted a tweet</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>polarity</name>
          <description>Overall sentiment polarity of a tweet [POS|NEG|NEU] or [SBJ|OBJ]</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>query</name>
          <description>Query that was used for collecting a tweet</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>id</name>
          <description>ID of a tweet</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>date</name>
          <description>String representation of the date when a tweet was posted</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
